#include<iostream>
using namespace std;
int sumOfBox(int k)
{
	int sum=0;
	for(int i=1;i<=k;i++) sum+=i;
	
	return sum;
}
int maxSum(int k,int n)
{
	int sum=0;
	for(int i=n;i>=n+1-k;i--)
	{
		sum+=i;
	}
	
	return sum;
}
int main()
{
	
	int t;
	cin>>t;
	for(int i=0;i<t;i++)
	{
		int n,k,b;
		cin>>n>>k>>b;
		int a[b];
		if(n<sumOfBox(b)||n>maxSum(b,k)) cout<<"-1"<<endl;
		else 
		{
			for(int i=0;i<b;i++) a[i]=k-i;
			int subtract=maxSum(b,k)-n;
			for(int i=0;i<b;i++)
			{
				if(subtract>=a[i]-(i+1))
				{
					subtract-=a[i]-(i+1);
					a[i]=i+1;
				}
				else if(subtract<a[i]-(i+1)&&subtract!=0)
				{
					a[i]-=subtract;
					subtract=0;
				}
				else break;
			}
			
			for(int i=0;i<b;i++) cout<<a[i]<<" ";
			cout<<endl;
			
		}
	
	}
}
